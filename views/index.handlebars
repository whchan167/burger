<div class="container">
     <div class="row">
          <div class="col-xs-12">
               <div class="text-center">
                    <img id="burgerLogo" src="http://diylogodesigns.com/blog/wp-content/uploads/2016/01/Flamin-Burger-logo-99designs.png">
               </div>
          </div>
     </div>

  <div class="row">
    <div class="col-md-6">
      <h1>My favorite burger</h1>

        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
            <p class="menuItem">  {{this.burger_name}} </p>

              <form class="burgerButton" action="/{{this.id}}?_method=PUT" method="POST">
                <button class="btn btn-primary" type="submit">Eat Da Burger!</button>
              </form>

            <hr>
          </div>
          {{/unless}}
        {{/each}}

    </div>
    <div class="col-sm-6 col-xs-12">
      <h1>Devoured Burgers</h1>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li class="the-devoured" id="devouredBurgers">{{this.burger_name}}</li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<div class="make-burger-wrapper">
<div class="container-fluid">
<div class="row">
  <div class="col-xs-12 make-burger">
    <h1>Make Your Own!</h1>
    <form class="form-inline" action="/" method="POST">
      <div class="form-group">
        <input type="text" id="burgerInput" name="name" class="form-control" placeholder="Type the name of your burger..." required>
      </div>
      <button class="btn btn-primary" type="submit">Make Burger!</button>
    </form>
</div>
</div>
</div>
</div>
</div>